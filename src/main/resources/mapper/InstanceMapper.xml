<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.annotation.dao.InstanceMapper" >

  <resultMap id="BaseResultMap" type="com.annotation.model.Instance" >
    <id column="insid" property="insid" jdbcType="INTEGER" />
    <result column="insindex" property="insindex" jdbcType="VARCHAR" />
    <result column="insstatus" property="insstatus" jdbcType="VARCHAR" />
    <result column="inscomptime" property="inscomptime" jdbcType="VARCHAR" />
    <result column="documentid" property="documentid" jdbcType="INTEGER" />
    <result column="labelnum" property="labelnum" jdbcType="INTEGER" />
  </resultMap>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from instance
    where insid = #{insid,jdbcType=INTEGER}
  </delete>

  <insert id="insert"  useGeneratedKeys="true" keyProperty="insid" parameterType="com.annotation.model.Instance" >
    insert into instance ( insindex, insstatus,
      inscomptime, documentid, labelnum
      )
    values (#{insindex,jdbcType=VARCHAR}, #{insstatus,jdbcType=VARCHAR},
      #{inscomptime,jdbcType=VARCHAR}, #{documentid,jdbcType=INTEGER}, #{labelnum,jdbcType=INTEGER}
      )
  </insert>

  <update id="updateByPrimaryKey" parameterType="com.annotation.model.Instance" >
    update instance
    set insindex = #{insindex,jdbcType=VARCHAR},
      insstatus = #{insstatus,jdbcType=VARCHAR},
      inscomptime = #{inscomptime,jdbcType=VARCHAR},
      documentid = #{documentid,jdbcType=INTEGER},
      labelnum = #{labelnum,jdbcType=INTEGER}
    where insid = #{insid,jdbcType=INTEGER}
  </update>

  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select insid, insindex, insstatus, inscomptime, documentid, labelnum
    from instance
    where insid = #{insid,jdbcType=INTEGER}
  </select>

  <select id="selectAll" resultMap="BaseResultMap" >
    select insid, insindex, insstatus, inscomptime, documentid, labelnum
    from instance
  </select>

    <resultMap id="InstanceItemByDocId" type="com.annotation.model.entity.InstanceItemEntity">
        <id column="insid" property="insid"></id>
        <result column="insindex" property="insindex"></result>
        <result column="insstatus" property="insstatus"></result>
        <result column="inscomptime" property="inscomptime"></result>
        <result column="documentid" property="documentid"></result>
        <result column="labelnum" property="labelnum"></result>
        <collection property="itemList" ofType="com.annotation.model.Item">
            <id column="itid" property="itid"></id>
            <result column="itemcontent" property="itemcontent"></result>
            <result column="itemindex" property="itemindex"></result>
            <result column="instanceid" property="instanceid"></result>
            <result column="itemlabelnum" property="labelnum"></result>
        </collection>
        <collection property="alreadyDone" ofType="Map">
            <result column="instanceid" property="instanceid" jdbcType="INTEGER" />
            <result column="label_id" property="labelId" jdbcType="INTEGER" />
            <result column="labeltype" property="labeltype" jdbcType="VARCHAR" />
        </collection>
    </resultMap>

    <select id="selectInstanceItem" parameterType="Integer" resultMap="InstanceItemByDocId">
        select s.insid, s.insindex, s.insstatus, s.inscomptime, s.documentid, s.labelnum,
            t.itid, t.itemcontent, t.itemindex, t.instanceid, t.labelnum itemlabelnum,
            dil.labeltype, dil.label_id,dt.instance_id
            from instance s left join dt_instance dt on s.insid=dt.instance_id
            left join dtd_item_label dil on dt.dt_instid =dil.dt_inst_id
            left join item t on s.insid=t.instanceid
            and dt.user_id=#{userId}
            where s.documentid=#{docId}
    </select>

    <resultMap id="InstanceListitemByDocId" type="com.annotation.model.entity.InstanceListitemEntity">
        <id column="insid" property="insid"></id>
        <result column="insindex" property="insindex"></result>
        <result column="insstatus" property="insstatus"></result>
        <result column="inscomptime" property="inscomptime"></result>
        <result column="documentid" property="documentid"></result>
        <collection property="listitems" ofType="com.annotation.model.Listitem">
            <id column="liid" property="liid"></id>
            <result column="listindex" property="listindex"></result>
            <result column="litemindex" property="litemindex"></result>
            <result column="litemcontent" property="litemcontent"></result>
            <result column="litemstatus" property="litemstatus"></result>
            <result column="litemcomptime" property="litemcomptime"></result>
        </collection>
        <collection property="alreadyDone" ofType="Map">
            <result column="a_listitem_id" property="a_listitem_id" jdbcType="INTEGER" />
            <result column="b_listitem_id" property="b_listitem_id" jdbcType="INTEGER" />
        </collection>
    </resultMap>

    <select id="selectInstanceListitem" parameterType="Integer" resultMap="InstanceListitemByDocId">
       select s.insid, s.insindex, s.insstatus, s.inscomptime, s.documentid,
        t.liid, t.listindex, t.litemindex, t.litemstatus, t.litemcomptime,t.litemcontent,
         dir.dt_inst_id,dir.a_listitem_id, dir.b_listitem_id
        from instance s
        left join dt_instance dt on s.insid=dt.instance_id
        left join listitem t on s.insid=t.instanceid
        left join dtd_item_relation dir on dt.dt_instid =dir.dt_inst_id
        and dt.user_id=#{userId}
        where s.documentid=#{docId}

    </select>


    <update id="alterInstanceTable">
        ALTER TABLE instance AUTO_INCREMENT =1
    </update>





</mapper>